                        for (x=0; x < locallb.length; x++){
                        	letter += '<li><h2>' + placenumber + '.</h2><h2 class="team">' + locallb[x].teamname + '</h2><h2 class="' + locallb[x].house + 'Label">' + locallb[x].house + '</h2><h2>' + locallb[x].r4 + '</h2></li>'
