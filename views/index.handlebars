                        for (x=0; x < locallb.length; x++){
                        	letter += '<li><h2>' + placenumber + '.</h2><h2 class="team">' + locallb[x].teamname + '</h2><h2 class="' + locallb[x].house + 'Label">' + locallb[x].house + '</h2><h2>' + locallb[x].r5 + '</h2></li>'
                        }
		} else if (round == 6){
			placenumber += 1
                        locallb.sort(dynamicSort("-r6"));
                        for (x=0; x < locallb.length; x++){
                        	letter += '<li><h2>' + placenumber + '.</h2><h2 class="team">' + locallb[x].teamname + '</h2><h2 class="' + locallb[x].house + 'Label>"' + locallb[x].house + '</h2><h2>' + locallb[x].r6 + '</h2></li>'
                        }
		}			      

		document.getElementById("teams").innerHTML = letter;
	});
